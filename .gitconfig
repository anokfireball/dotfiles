[user]
	email = github@kthxbye.cyou
	name = Fabian Koller
	signingkey = ~/.ssh/id_ed25519_signing.pub
[core]
	compression = 9
	excludesfile = ~/.gitignore_global

[init]
	defaultBranch = main

[branch]
	sort = -committerdate
[tag]
	sort = -version:refname

[commit]
	gpgsign = true
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers

[pull]
	rebase = true
[push]
	default = simple
	autoSetupRemote = true
	followTags = true

[rebase]
	autoStash = true
	autoSquash = true
	updateRefs = true
[merge]
	conflictstyle = zdiff3

[diff]
	colorMoved = default
	algorithm = histogram
	mnemonicPrefix = true
	renames = true
[column]
	ui = auto

[rerere]
	enabled = true
	autoupdate = true
[maintenance]
	auto = true
	strategy = incremental

[includeIf "gitdir:~/"]
	path = ~/.gitalias
	path = ~/.gitconfig_delta_active

[includeIf "gitdir:~/.work/"]
	path = ~/.work/.gitconfig

[log]
	showSignature = true
