{
  "$schema": "https://opencode.ai/config.json",
  "theme": "dracula",
  "share": "manual",
  "autoupdate": false,
  "mode": {
    "build": {
      "model": "{env:OPENCODE_MODEL_BUILD}"
    },
    "plan": {
      "model": "{env:OPENCODE_MODEL_PLAN}"
    },
    "research": {
      "model": "{env:OPENCODE_MODEL_RESEARCH}"
    },
    "review": {
      "model": "{env:OPENCODE_MODEL_REVIEW}"
    }
  },
  "agent": {
    "research": {
      "description": "Performs comprehensive research and analysis to answer questions about code, tools, frameworks, and project structure",
      "mode": "primary",
      "temperature": 0.0,
      "tools": {
        "bash": true,
        "edit": false,
        "write": false,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": false,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      },
      "permission": {
        "edit": "deny",
        "webfetch": "allow"
      },
      "prompt": "{file:./prompts/research.txt}"
    },
    "review": {
      "description": "Performs in-depth code reviews focusing on correctness, security, maintainability, and architecture",
      "mode": "primary",
      "temperature": 0.1,
      "tools": {
        "bash": true,
        "edit": false,
        "write": false,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": false,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      },
      "permission": {
        "edit": "deny"
      },
      "prompt": "{file:./prompts/review.txt}"
    },
    "ticket": {
      "description": "Generates well-structured ticket files from epic descriptions and tasks",
      "model": "{env:OPENCODE_MODEL_TICKET}",
      "mode": "subagent",
      "temperature": 0.2,
      "tools": {
        "bash": true,
        "edit": true,
        "write": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      },
      "permission": {
        "bash": {
          "mkdir *": "allow",
          "*": "ask"
        }
      },
      "prompt": "{file:./prompts/ticket.txt}"
    },
    "docs": {
      "description": "Creates comprehensive documentation including inline code comments, API docs, and architectural overviews",
      "model": "{env:OPENCODE_MODEL_DOCS}",
      "mode": "subagent",
      "temperature": 0.2,
      "tools": {
        "bash": true,
        "edit": true,
        "write": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      },
      "permission": {
        "bash": {
          "mkdir docs": "allow",
          "mkdir docs/*": "allow",
          "touch *.md": "allow",
          "touch docs/*.md": "allow",
          "touch *.rst": "allow",
          "cp *.md *": "allow",
          "mv *.md *": "allow",
          "*": "ask"
        }
      },
      "prompt": "{file:./prompts/docs.txt}"
    },
    "test": {
      "description": "Analyzes codebases to design appropriate test strategies, reasons about test necessity and type selection, and implements comprehensive test suites following language-specific best practices",
      "model": "{env:OPENCODE_MODEL_TEST}",
      "mode": "subagent",
      "temperature": 0.1,
      "tools": {
        "bash": true,
        "edit": true,
        "write": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      },
      "permission": {
        "bash": {
          "mkdir *": "allow",
          "*": "ask"
        }
      },
      "prompt": "{file:./prompts/test.txt}"
    }
  },
  "permission": {
    "bash": {
      "cat *": "allow",
      "diff *": "allow",
      "echo *": "allow",
      "find *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "ls *": "allow",
      "pwd": "allow",
      "tail *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git show *": "allow",
      "git status *": "allow",
      "git add *": "deny",
      "git commit": "deny",
      "*": "ask"
    },
    "edit": "ask",
    "webfetch": "ask"
  }
}
