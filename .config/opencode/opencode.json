{
  "$schema": "https://opencode.ai/config.json",
  "theme": "dracula",
  "share": "disabled",
  "autoupdate": false,
  "mode": {
    "build": {
      "model": "{env:OPENCODE_MODEL_BUILD}"
    },
    "plan": {
      "model": "{env:OPENCODE_MODEL_PLAN}"
    },
    "research": {
      "model": "{env:OPENCODE_MODEL_RESEARCH}"
    },
    "review": {
      "model": "{env:OPENCODE_MODEL_REVIEW}"
    }
  },
  "agent": {
    "research": {
      "description": "Performs comprehensive research and analysis to answer questions about code, tools, frameworks, and project structure",
      "mode": "primary",
      "temperature": 0.0,
      "tools": {
        "bash": true,
        "edit": false,
        "write": false,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": false,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      },
      "permission": {
        "bash": {
          "cat *": "allow",
          "ls *": "allow",
          "find *": "allow",
          "grep *": "allow",
          "*": "ask"
        },
        "edit": "deny",
        "webfetch": "allow"
      },
      "prompt": "{file:./prompts/research.txt}"
    },
    "review": {
      "description": "Performs in-depth code reviews focusing on correctness, security, maintainability, and architecture",
      "mode": "primary",
      "temperature": 0.1,
      "tools": {
        "bash": true,
        "edit": false,
        "write": false,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": false,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      },
      "permission": {
        "bash": {
          "cat *": "allow",
          "ls *": "allow",
          "find *": "allow",
          "grep *": "allow",
          "*": "ask"
        },
        "edit": "deny",
        "webfetch": "allow"
      },
      "prompt": "{file:./prompts/review.txt}"
    },
    "ticket": {
      "description": "Generates well-structured ticket files from epic descriptions and tasks",
      "model": "{env:OPENCODE_MODEL_TICKET}",
      "mode": "subagent",
      "temperature": 0.2,
      "tools": {
        "bash": true,
        "edit": true,
        "write": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      },
      "permission": {
        "bash": {
          "mkdir *": "allow",
          "touch *.md": "allow",
          "*": "ask"
        },
        "edit": "allow",
        "webfetch": "ask"
      },
      "prompt": "{file:./prompts/ticket.txt}"
    },
    "docs": {
      "description": "Creates comprehensive documentation including inline code comments, API docs, and architectural overviews",
      "model": "{env:OPENCODE_MODEL_DOCS}",
      "mode": "subagent",
      "temperature": 0.2,
      "tools": {
        "bash": true,
        "edit": true,
        "write": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      },
      "permission": {
        "bash": {
          "mkdir docs": "allow",
          "mkdir docs/*": "allow",
          "touch *.md": "allow",
          "touch docs/*.md": "allow",
          "touch *.rst": "allow",
          "cp *.md *": "allow",
          "mv *.md *": "allow",
          "*": "ask"
        },
        "edit": "allow",
        "webfetch": "ask"
      },
      "prompt": "{file:./prompts/docs.txt}"
    },
    "test": {
      "description": "Analyzes codebases to design appropriate test strategies, reasons about test necessity and type selection, and implements comprehensive test suites following language-specific best practices",
      "model": "{env:OPENCODE_MODEL_TEST}",
      "mode": "subagent",
      "temperature": 0.1,
      "tools": {
        "bash": true,
        "edit": true,
        "write": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "patch": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      },
      "permission": {
        "bash": {
          "mkdir *": "allow",
          "*": "ask"
        },
        "edit": "allow",
        "webfetch": "ask"
      },
      "prompt": "{file:./prompts/test.txt}"
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "sequentialthinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "taskmanager": {
      "type": "local",
      "command": ["npx", "-y", "@kazuph/mcp-taskmanager"],
      "enabled": true
    }
  }
}
